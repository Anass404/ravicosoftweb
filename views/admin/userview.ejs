<% layout('./layout') -%>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
			<li class="active">Dashboard</li>
		</ol>
	</div>
	<!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Create User</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<form method="post" id="userform">
						<input type="hidden" name="_id" value="<%= model._id%>">
						<div class="form-group col-md-6">
							<label>Full Name</label>
							<input type="text"  required  placeholder="Full Name" class="form-control" name="fullname"
								value="<%= model.fullname %>">
						</div>
						<div class="form-group col-md-6">
							<label>User Name</label>

							<input type="text"  required placeholder="User Name" class="form-control" name="username"
								value="<%= model.username %>">
						</div>
						<div class="form-group col-md-6">
							<label>Email</label>
							<input type="email "required  placeholder="Email" class="form-control" name="email"
								value="<%= model.email%>">
						</div>
						<div class="form-group col-md-6">
							<label>Password</label>
							<input type="password"  required placeholder="Password" class="form-control" name="password"
								value="<%= model.password %>">
						</div>
						<div class="form-group col-md-4">
							<label>BusinessBook Package</label>
							<select name="businessbookmembershipplan" required class="form-control">
								<option value="">package</option>
								<option value="package_1"
									<%= (model.businessbookmembershipplan=="Package1")? 'selected':'' %>>package 1
								</option>
								<option value="package_2"
									<%= (model.businessbookmembershipplan=="Package2")? 'selected':'' %>>package 2
								</option>
								<option value="package_3"
									<%= (model.businessbookmembershipplan=="Package3")? 'selected':'' %>>package 3
								</option>
							</select>
						</div>
						<div class="form-group col-md-4">
							<label>Sms Package</label>
							<select class="form-control" name="smsplan" required>
								<option value="">SMS</option>
								<option value="none" <%= (model.smspackage=="none")? 'selected':'' %>>None</option>
								<option value="smsplan1" <%= (model.smsplan=="smsplan1")? 'selected':'' %>>Package 1
								</option>
								<option value="smsplan2" <%= (model.smsplan=="smsplan2")? 'selected':'' %>>Package 2
								</option>
								<option value="smsplan3" <%= (model.smsplan=="smsplan3")? 'selected':'' %>>package 3
								</option>	
							</select>
						</div>
						<div class="form-group col-md-4">
							<label>Role</label>
							<select class="form-control" name="role" required>
								<option value="">Role</option>
								<option value="admin" <%= (model.role=="admin")? 'selected':'' %>>admin</option>
								<option value="user" <%= (model.role=="user")? 'selected':'' %>>user</option>
							</select>
						</div>
						<button type="submit" class="btn btn-primary">Save</button>

				</div>
				</form>
			</div>
		</div>
	</div>
</div>



